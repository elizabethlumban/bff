{
    "name": "bff",
    "version": "1.0.0",
    "main": "dist/app.js",
    "license": "UNLICENSED",
    "private": true,
    "scripts": {
        "build": "rm -rf dist && tsc",
        "build-container": "docker build -t rule-editor-app .",
        "lint": "eslint './src/**/*.{ts,js}'",
        "audit-dependencies": "audit-ci --config audit-ci.json",
        "lint-fix": "eslint './src/**/*.ts' --fix",
        "start": "node ./dist/index.js",
        "start-dev": "NODE_ENV=development ts-node-dev src/index.ts",
        "test": "NODE_ENV=development jest --forceExit --runInBand --detectOpenHandles --coverage",
        "test-parser": "NODE_ENV=development jest --forceExit --runInBand --detectOpenHandles -t 'test-parser'",
        "test-watch": "NODE_ENV=development jest  --runInBand --watch",
        "sonar": "sonarqube-verify",
        "start-local-sonarqube": "docker-compose -f docker-compose.sonar.yml up -d",
        "stop-local-sonarqube": "docker-compose -f docker-compose.sonar.yml down"
    },
    "dependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.1",
        "@types/helmet": "^0.0.45",
        "@types/jest": "^25.1.4",
        "@types/memoizee": "^0.4.4",
        "@types/mongoose": "^5.7.7",
        "axios": "^0.19.0",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-basic-auth": "^1.2.0",
        "helmet": "^3.21.3",
        "jsdom": "^16.4.0",
        "lodash": "^4.17.15",
        "memoizee": "^0.4.14",
        "mongoose": "^5.9.5",
        "morgan-body": "^2.5.1",
        "nanoid": "^3.1.23",
        "tslib": "^1.10.1",
        "uuid": "^8.3.0",
        "yarn": "^1.22.4"
    },
    "devDependencies": {
        "@types/jsdom": "^12.2.4",
        "@types/lodash": "^4.14.149",
        "@types/mongodb-memory-server": "^2.3.0",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "audit-ci": "^2.5.1",
        "csv-writer": "^1.6.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-sonarjs": "^0.5.0",
        "husky": "^4.2.3",
        "jest": "^25.1.0",
        "jest-junit": "^10.0.0",
        "jest-sonar-reporter": "^2.0.0",
        "mongodb": "^3.6.2",
        "mongodb-memory-server": "^6.4.1",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.1",
        "sonarqube-scanner": "^2.5.0",
        "sonarqube-verify": "^1.0.2",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.7.0",
        "ts-node-dev": "^1.0.0-pre.44",
        "typescript": "^3.8.3"
    },
    "engines": {
        "node": "12.x.x"
    },
    "jestSonar": {
        "reportPath": "coverage",
        "reportFile": "test-reporter.xml",
        "indent": 4
    }
}